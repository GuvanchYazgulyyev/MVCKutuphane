@using MVCKutuphane.Models.Entity
@model List<TBLHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>İadesi Alınan Kitap Listesi</h4>
<table class="table table-striped" style="margin-top:10px">
    <tr style="background-color: #33CC00 ">
        <th>İŞLEM ID</th>
        <th>Kitap Adı</th>
        <th>ÜYE</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİHİ</th>
        @*<th>İADE TARİHİ</th>*@
        <th>ÜYE İADE TARİHİ</th>
        <th>DETAYLAR</th>

    </tr>
    @foreach (var ktpiade in Model)
    {
        <tr>
            <td>@ktpiade.ID</td>
            <td>@ktpiade.TBLKitap.Ad</td>
            <td>@ktpiade.TBLUyeler.Ad  &nbsp;@ktpiade.TBLUyeler.Soyad</td>
            <td>@ktpiade.TBLPersonel.Personel</td>
            <td>@Convert.ToDateTime(ktpiade.AlisTarih).ToString("dd/MM/yyyy")</td>
            @*<td>@Convert.ToDateTime(ktpiade.IadeTarih).ToString("dd/MM/yyyy")</td>*@
            <td>@Convert.ToDateTime(ktpiade.UyeGetirTarih).ToString("dd/MM/yyyy")</td>

            <td><a href="/Odunc/Odunciade/@ktpiade.ID" class="btn btn-default" style="background:#2db8f6;">Detayları Görüntüle</a></td>
        </tr>
    }
</table>



