@using MVCKutuphane.Models.Entity
@model List<TBLKitap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h3>Kitap Sayfası</h3>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
<div style="margin-bottom:10px; margin-top:10px;">
    <b>Aranacak Kitap Adının Giriniz...</b>&nbsp;
 
    @Html.TextBox("p")
    <input type="submit" class="btn btn-default" value="Ara" />
</div>

}
@*<div style="margin-bottom:10px; margin-top:10px;">
        <input class="form-control" type="text" placeholder="Aranacak Kitap Adının Giriniz..." />
    </div>*@

<table class="table table-striped" style="margin-top:10px">
    <tr style="background-color: #33CC00 ">
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Kategorisi</th>
        <th>Kitap Yazarı</th>
        <th>Basım Yılı</th>
        <th>Yayın Evi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>
    @foreach (var ktp in Model)
    {
        <tr>
            <th>@ktp.ID</th>
            <td>@ktp.Ad</td>
            <td>@ktp.TBLKategori.AD</td>
            <td>@ktp.TBLYazar.Ad&nbsp; @ktp.TBLYazar.Soyad</td>
            <td>@ktp.BasimYil</td>
            <td>@ktp.YayinEvi</td>
            <td>@ktp.Sayfa</td>
            <td>@ktp.Durum</td>
            <td>
                @Html.ActionLink("Sil", "KitapSil", new { id = ktp.ID }, new
        { @class = "btn btn-danger", onclick = "return confirm('Silmek Istediginizden Emin misiniz?')" })
            </td>
            @*<td><a href="/Kitap/KategoriSil/@ktg.ID" class="btn btn-danger">SİL</a></td>*@
            <td><a href="/Kitap/KitapGetir/@ktp.ID" class="btn btn-warning">GÜNCELLE</a></td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-info"> Yeni Kitap Ekle</a>
