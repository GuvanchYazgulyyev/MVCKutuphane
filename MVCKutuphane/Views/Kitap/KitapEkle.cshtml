@model MVCKutuphane.Models.Entity.TBLKitap
@{
    ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h4>Kitap Ekleme Sayfası</h4>

<form method="post" class="form-group">
    <div>
        <label>Kitap Ad:</label>
        <input class="form-control" type="text" name="Ad" required="" />
        @*@Html.ValidationMessageFor(y => y.Ad)*@
    </div>
    <br />
    <div>
        <label>Kitap Kategorisi:</label>
        @Html.DropDownListFor(k => k.TBLKategori.ID, (List<SelectListItem>)ViewBag.dgr1,
       new { @class = "form-control" })
        @*<input class="form-control" type="text" name="Kategori" />*@
    </div>
    <br />
    <div>
        <label>Kitap Yazarı:</label>
        @Html.DropDownListFor(k => k.TBLYazar.ID, (List<SelectListItem>)ViewBag.dgr2,
       new { @class = "form-control" })
        @*<input class="form-control" type="text" name="Yazar" />*@
    </div>
    <br />
    <div>
        <label>Kitap Basım Yılı:</label>
        <input class="form-control" type="text" name="BasimYil" required=""; />
    </div>
    <br />
    <div>
        <label>Kitap Yayın Evi:</label>
        <input class="form-control" type="text" name="YayinEvi" required=""; />
    </div>
    <br />
    <div>
        <label>Sayfa Sayfası:</label>
        <input class="form-control" type="text" name="Sayfa" required=""; />
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-success" id="Btn1">Kitap Ekle</button>
    </div>
    @*<input type="hidden" name="Durum" value="True" />*@ @*Eger burayı aktif brakırsak ilk veri
    eklendiginde  Durmu True olarak kaydeder*@
</form>
