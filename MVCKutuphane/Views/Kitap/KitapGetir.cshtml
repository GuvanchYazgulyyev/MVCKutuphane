@model MVCKutuphane.Models.Entity.TBLKitap
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
<div class="form-group" style="margin-top:10px">
    @*@Html.LabelFor(x => x.ID)*@
    <label>Kitap ID:</label>
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    <br />
    <label>Kitap Adı:</label>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <label>Kategorisi:</label>
    @Html.DropDownListFor(k => k.TBLKategori.ID, (List<SelectListItem>)ViewBag.dgr1,
      new { @class = "form-control" })
    @*@Html.TextBoxFor(x => x.Kategori, new { @class = "form-control" })*@
    <br /><label>Yazar:</label>
    @Html.DropDownListFor(k => k.TBLYazar.ID, (List<SelectListItem>)ViewBag.dgr2,
      new { @class = "form-control" })
    @*@Html.TextBoxFor(x => x.Yazar, new { @class = "form-control" })*@
    <br />
    <label>Basım Yılı:</label>
    @Html.TextBoxFor(x => x.BasimYil, new { @class = "form-control" })
    <br />
    <label>Yayın Evi:</label>
    @Html.TextBoxFor(x => x.YayinEvi, new { @class = "form-control" })
    <br />
    <label>Sayfa Sayısı:</label>
    @Html.TextBoxFor(x => x.Sayfa, new { @class = "form-control" })
    <br />
    @*<label>Durumu:</label>
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />*@
    @*@Html.HiddenFor(x => x.ID)*@
<div style="margin-top:15px">
    <button class="btn btn-primary">Kitap Bilgilerini Güncelle</button>
    @*<input type="hidden" name="Durum" value="True" />*@

</div>
</div>

}


